<p id="notice"><%= notice %></p>

<h1>Listing Dungeons</h1>

<table>
  <thead>
    <tr>
      <th>Monster</th>
      <th>Quantity</th>
      <th>Difficulty</th>
      <th>Special ability</th>
      <th>Loot</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dungeons.each do |dungeon| %>
      <tr>
        <td><%= dungeon.monster %></td>
        <td><%= dungeon.quantity %></td>
        <td><%= dungeon.difficulty %></td>
        <td><%= dungeon.special_ability %></td>
        <td><%= dungeon.loot %></td>
        <td><%= link_to 'Show', dungeon %></td>
        <td><%= link_to 'Edit', edit_dungeon_path(dungeon) %></td>
        <td><%= link_to 'Destroy', dungeon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New dungeon', new_dungeon_path %>
