<p id="notice"><%= notice %></p>

<h1>Listing Carousings</h1>

<table>
  <thead>
    <tr>
      <th>Dice roll</th>
      <th>Result</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carousings.each do |carousing| %>
      <tr>
        <td><%= carousing.dice_roll %></td>
        <td><%= carousing.result %></td>
        <td><%= link_to 'Show', carousing %></td>
        <td><%= link_to 'Edit', edit_carousing_path(carousing) %></td>
        <td><%= link_to 'Destroy', carousing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

